extends ../template/layout

block content
	.container
		h3 Create a Transaction

		table
			tr
				td Payment Type
				td Card Number
			tr
				td Visa Credit
				td= 4012888888881881
			tr
				td Visa Debit
				td= 4000056655665556
			tr
				td Amex Credit
				td= 371449635398431
			tr
				td Mastercard Prepaid
				td= 5105105105105100 
		br

		form(action='/transactions', method='post', id='payment-form' autocomplete='on')
			span(class='payment-errors')
			label(for='name') Your Name
				input(name='name', value='Excited User!')

			label(for='email') Your email
				input(name='email', value='Excited User@gmail.com')

			.form-group
				label(for='number') Card Number  
					input(data-stripe='number', class='cc-number', autocomplete='cc-number', required, value='4242424242424242')
			.form-group
				label(for='cvc') CVC  
					input(data-stripe='cvc', class='cc-cvc' autocomplete='off' required, value='123')
			.form-group
				label(for='Exp Month') Exp Month  
					input(data-stripe='exp-month', class='cc-exp-month', autocomplete='cc-exp' required, value='01')
			.form-group
				label(for='Exp Year') Exp Year  
					input(data-stripe='exp-year' class='cc-exp-year', autocomplete='cc-exp' required, value='15')
			br
			button(type='submit') Submit

		h2.validation

			script(src='https://js.stripe.com/v2/')
			script(src='/bower/jquery/dist/jquery.min.js')
			script(src='/public/js/transaction/new.js')
			script(src='/bower/jquery.payment/lib/jquery.payment.js')


include ../template/footer