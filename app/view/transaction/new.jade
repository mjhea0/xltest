extends ../template/layout

block content
	.container
		h3 Create a Transaction

		table
			tr
				td Payment Type
				td Card Number
			tr
				td Visa Credit
				td= 4012888888881881
			tr
				td Visa Debit
				td= 4000056655665556
			tr
				td Amex Credit
				td= 371449635398431
			tr
				td Mastercard Prepaid
				td= 5105105105105100 
		br

		form(action='/transactions', method='post', id='payment-form' autocomplete='on')
			span(class='payment-errors')
			.form-group
				label(for='name') Your Name
				input(name='name', class='input-lg form-control', placeholder='I love Excel!')
			.form-group
				label(for='email') Your Email
				input(name='email', class='input-lg form-control', placeholder='Send me my Excel Test!@gmail.com')
			.form-group
				label(for='number', class='control-label') Card Number 
				small(class='text-muted')
					span(class='cc-brand')
				input(data-stripe='number', class='cc-number input-lg form-control', autocomplete='cc-number', required, placeholder='Card number')
			.form-group
				label(for='cvc', class='control-label') CVC  
				input(data-stripe='cvc', class='cc-cvc input-lg form-control' autocomplete='off' required, placeholder='Security Code')
			.form-group
				label(for='cc-exp', class='control-label') Expiration  
				input(class='cc-exp input-lg form-control' required, placeholder='Expiry Date')
			br
			button(type='submit' class='btn btn-primary') Submit

	h2.validation
			
	script(src='https://js.stripe.com/v2/')
	script(src='/bower/jquery/dist/jquery.min.js')
	script(src='/public/js/transaction/new.js')
	script(src='/bower/jquery.payment/lib/jquery.payment.js')


include ../template/footer